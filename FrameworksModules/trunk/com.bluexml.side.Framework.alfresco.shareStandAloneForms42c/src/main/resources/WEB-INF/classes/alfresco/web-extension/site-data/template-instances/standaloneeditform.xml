<?xml version='1.0' encoding='UTF-8'?>
<template-instance>
   <template-type>com/bluexml/standaloneeditform</template-type>
   <components>
      <component>
         <region-id>formPortlet</region-id>
         <url>/components/form?formId={formId}&amp;redirect={redirect}&amp;css={css}&amp;js={js}</url>
         <properties>
            <itemKind>node</itemKind>
            <itemId>{nodeRef}</itemId>
            <mode>edit</mode>
            <submitType>{submitType}</submitType>
            <showCaption>true</showCaption>
            <showCancelButton>true</showCancelButton>
         </properties>
      </component>
   </components>
</template-instance>
