<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.bluexml</groupId>
		<artifactId>xforms.parent</artifactId>
		<version>2.0.1-SNAPSHOT</version>
	</parent>
	<groupId>com.bluexml.side.Framework.xforms.webapp</groupId>
	<artifactId>XForms-Chiba</artifactId>
	<packaging>war</packaging>
	<name>Generated XForms webapp</name>
	<version>0.0.1-SNAPSHOT</version>
	<description>This project has been generated by XForms artifact.
		Fill in plugin configuration with models to generate.
		Don't forget to fill alfresco.properties with valid paths for upload.
		
		This project only works with an Alfresco using BXDS generation and custom modules.
		Both generations, XForms and Alfresco, should use same model versions.</description>
	<dependencies>
		<!-- 
			<dependency>
			<groupId>com.bluexml.side.Framework.xforms.webapp</groupId>
			<artifactId>Chiba.actions</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			</dependency>
		-->
	</dependencies>
	<build>
		<finalName>${artifactId}-${parent.version}</finalName>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1-alpha-2</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.bluexml</groupId>
				<artifactId>xforms.generator.mojo</artifactId>
				<configuration>
					<clazzFiles>
						<!-- 
							<param>c:/path/to/model.obl</param>
							<param>c:/path/to/another.model.obl</param>
						-->
					</clazzFiles>
					<formsFiles>
						<!-- 
							<param>c:/path/to/model.kerblueforms</param>
							<param>
							c:/path/to/another.model.kerblueforms
							</param>
						-->
					</formsFiles>
					<simplifyClasses>true</simplifyClasses>
					<generateReadOnlyForms>true</generateReadOnlyForms>
					<readOnlySuffix>RO</readOnlySuffix>
					<logLevel>INFO_STRICT</logLevel>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<version>6.1.14</version>
				<configuration>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>8082</port>
						</connector>
					</connectors>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>BXKB-repo</id>
			<url>http://merry.bluexml.com/m2/repository</url>
		</repository>
		<repository>
			<id>BXKB-repo-snapshots</id>
			<url>http://merry.bluexml.com/m2/snapshotrepository</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>BXKB-plugin</id>
			<url>http://merry.bluexml.com/m2/repository</url>
		</pluginRepository>
		<pluginRepository>
			<id>BXKB-plugin-snapshots</id>
			<url>http://merry.bluexml.com/m2/snapshotrepository</url>
		</pluginRepository>
	</pluginRepositories>
</project>

