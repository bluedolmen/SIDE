<project xmlns:artifact="antlib:org.apache.maven.artifact.ant" name="com.bluexml.side.Framework.alfresco.commons3411E" default="patchWebapps">
	<property file="build.${user.name}.properties" />
	<property file="${user.home}/build.properties" />
	<path id="maven-ant-tasks.classpath" path="lib/maven-ant-tasks-2.1.3.jar" />
	<typedef resource="org/apache/maven/artifact/ant/antlib.xml" uri="antlib:org.apache.maven.artifact.ant" classpathref="maven-ant-tasks.classpath" />
	<artifact:pom id="mypom" file="pom.xml" />
	<property name="moduleId" value="${mypom.artifactId}" />

	<!-- ================================= 
          target: name              
         ================================= -->
	<target name="patchWebapps" depends="" description="build and install in local alfresco">
		<echo message="use maven to build package..." />
		<maven basedir="${basedir}" options="" goal="clean" resultproperty="maven.build.result" />
		<maven basedir="${basedir}" options="" goal="install" resultproperty="maven.build.result" />
		<!--<artifact:mvn pom="pom.xml" mavenHome="${maven.home}">
			<arg value="clean" />
			<arg value="package" />
		</artifact:mvn>
		-->
		<echo message="==========" />
		<echo message="patch the web application webapps.home=${webapps.home}" />

		<copy todir="${webapps.home}/alfresco" overwrite="true" failonerror="false" verbose="true">
			<fileset dir="target/${moduleId}-${mypom.version}/web" id="id">
				<include name="**/**" />
			</fileset>
		</copy>
		<copy todir="${webapps.home}/alfresco/WEB-INF/classes" overwrite="true" failonerror="false" verbose="true">
			<fileset dir="target/${moduleId}-${mypom.version}/config" id="id">
				<include name="**/**" />
			</fileset>
		</copy>
		<delete failonerror="false" verbose="true">
			<fileset dir="${webapps.home}/alfresco/WEB-INF/lib">
				<include name="${moduleId}-*.jar" />
			</fileset>
		</delete>
		<copy todir="${webapps.home}/alfresco/WEB-INF/lib" overwrite="true" failonerror="false" verbose="true">
			<fileset dir="target/${moduleId}-${mypom.version}/lib" id="id">
				<include name="**/**" />
			</fileset>
		</copy>

		<copy todir="${webapps.home}/alfresco/WEB-INF/classes/${mypom.properties.config.target.path}" overwrite="true" failonerror="false" verbose="true">
			<fileset dir="target/${moduleId}-${mypom.version}" id="id">
				<include name="module.properties" />
			</fileset>
		</copy>
		<echo message="==========" />
		<!--
		<echo message="clean project" />
		<artifact:mvn pom="pom.xml" mavenHome="${maven.home}">
			<arg value="clean" />
		</artifact:mvn>
		-->
		<!--<maven basedir="${basedir}" options="" goal="clean" resultproperty="maven.build.result" />-->
	</target>


	<!-- ================================= 
          target: name              
         ================================= -->
	<target name="maven_install" depends="" description="do mvn install">
		<!--<artifact:mvn pom="pom.xml" mavenHome="/usr/share/maven">
			<arg value="clean" />
			<arg value="install" />
		</artifact:mvn>
		-->
		<maven basedir="${basedir}" options="" goal="install" resultproperty="maven.build.result" />
	</target>

	<target name="maven_deploy" depends="" description="do mvn deploy">
		<maven basedir="${basedir}" options="" goal="clean" resultproperty="maven.build.result" />
		<maven basedir="${basedir}" options="" goal="deploy" resultproperty="maven.build.result" />
		<!--
		<artifact:mvn pom="pom.xml" mavenHome="${maven.home}">
			<arg value="clean" />
			<arg value="deploy" />
		</artifact:mvn>
		-->
	</target>


	<!-- ================================= 
	          target: runluke              
	         ================================= -->
	<target name="runluke" depends="" description="description">
		<echo message="runing ${lukeall}" />
		<path id="alfresco.cp">
			<fileset dir="${libs}" includes="alfresco-data*.jar" />
			<fileset dir="${libs}" includes="c*.jar" />
			<!--<fileset dir="${libs}" includes="lucene*.jar" />
				-->
			<pathelement path="target/${moduleId}-${mypom.version}-classes.jar" />
			<pathelement path="${lukeall}" />
		</path>

		<property name="myproperty" refid="alfresco.cp" />
		<echo message="${myproperty}">
		</echo>
		<java classname="org.getopt.luke.Luke" fork="true" dir="${basedir}" classpathref="alfresco.cp" >
			<jvmarg line="-Xdebug -Xrunjdwp:transport=dt_socket,address=4005,server=y,suspend=n -Dlog4j.logger.com.bluexml.side.framework.alfresco.commons=debug"/>
			<arg line="-index ${index.home} -ro" />
		</java>


	</target>


	<!-- ========
		we do not use artifact: to avoid jvm termination error
	 ======== -->
	<macrodef name="maven">
		<attribute name="options" default="" />
		<attribute name="goal" />
		<attribute name="basedir" />
		<attribute name="resultproperty" default="maven.result" />
		<element name="args" implicit="true" optional="true" />
		<sequential>
			<java classname="org.codehaus.classworlds.Launcher" fork="true" dir="@{basedir}" resultproperty="@{resultproperty}">
				<jvmarg value="-Xmx512m" />
				<classpath>
					<fileset dir="${maven.home}/boot">
						<include name="*.jar" />
					</fileset>
					<fileset dir="${maven.home}/lib">
						<include name="*.jar" />
					</fileset>
				</classpath>
				<sysproperty key="classworlds.conf" value="${maven.home}/bin/m2.conf" />
				<sysproperty key="maven.home" value="${maven.home}" />
				<arg line="--batch-mode @{options} @{goal}" />
			</java>
			<echo message="exit code : ${maven.build.result}" />
		</sequential>
	</macrodef>

</project>