<plugin>


  <extension
    point = "org.eclipse.ui.newWizards">
    <category
      id = "org.eclipse.emf.ecore.Wizard.category.ID"
      name="%_UI_Wizard_category">
    </category>
    <wizard
      id = "com.bluexml.side.portal.presentation.PortalModelWizardID"
      name = "%_UI_PortalModelWizard_label"
      class = "com.bluexml.side.portal.presentation.PortalModelWizard"
      category = "org.eclipse.emf.ecore.Wizard.category.ID"
      icon = "icons/full/obj16/PortalModelFile.gif">
      <description>%_UI_PortalModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "com.bluexml.side.portal.presentation.PortalEditorID"
        name = "%_UI_PortalEditor_label"
        icon = "icons/full/obj16/PortalModelFile.gif"
        extensions = "portal"
        class = "com.bluexml.side.portal.presentation.PortalEditor" 
        contributorClass="com.bluexml.side.portal.presentation.PortalActionBarContributor" >
    </editor>
  </extension>    
</plugin>
