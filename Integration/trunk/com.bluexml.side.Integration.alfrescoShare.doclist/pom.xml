<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bluexml.side.Integration.alfrescoShare</groupId>
	<artifactId>com.bluexml.side.Integration.alfrescoShare.doclist</artifactId>
	<version>1.0.0</version>
	<packaging>zip</packaging>
	<build>
		<extensions>
			<extension>
				<groupId>com.bluexml.side.maven</groupId>
				<artifactId>com.bluexml.side.maven.zipPackage</artifactId>
				<version>1.0-SNAPSHOT</version>
			</extension>
		</extensions>

		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<tasks>
								<ant antfile="build.xml" target="buildExtension">
									<property name="version" value="${version}" />
								</ant>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>myRepositoryRelease</id>
			<url>http://localhost:8081/nexus/content/repositories/myRepositoryRelease</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>myRepositorySnap</id>
			<url>http://localhost:8081/nexus/content/repositories/myRepositorySnap</url>
		</snapshotRepository>
	</distributionManagement>

</project>