<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.bluexml.side.Integration.alfrescoShare</groupId>
	<artifactId>com.bluexml.side.Integration.alfrescoShare.doclist</artifactId>
	<version>1.0.0</version>
	<packaging>zip</packaging>
	<build>
		<extensions>
			<extension>
				<groupId>com.bluexml.side.Integration.m2</groupId>
				<artifactId>com.bluexml.side.Integration.m2.zipPackage</artifactId>
				<version>1.0</version>
			</extension>
		</extensions>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>package</phase>
						<configuration>
							<tasks>
								<ant antfile="build.xml" target="buildExtension">
									<property name="version" value="${version}" />
								</ant>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<!-- use the following if you're not using a snapshot version. -->
		<repository>
			<id>release</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/releases</url>
		</repository>
		<!-- use the following if you ARE using a snapshot version. -->
		<snapshotRepository>
			<id>snapshots</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/snapshots</url>
		</snapshotRepository>
	</distributionManagement>
	<repositories>
		<!-- Public repositories -->
		<repository>
			<id>BXKB-repo</id>
			<url>http://merry.bluexml.com/m2/repository</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>BXKB-repo-snapshots</id>
			<url>http://merry.bluexml.com/m2/snapshotrepository</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<!-- test repositories (internal)-->
		<repository>
			<id>release</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>snapshots</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<!-- local repositories (developer) -->
		<repository>
			<id>release</id>
			<url>http://localhost:8081/nexus/content/repositories/releases</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>snapshots</id>
			<url>http://localhost:8081/nexus/content/repositories/snapshots</url>
			<releases>
				<enabled>false</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>snapshots</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/snapshots</url>
		</pluginRepository>
		<pluginRepository>
			<id>releases</id>
			<url>http://192.168.49.18:8081/nexus/content/repositories/releases</url>
		</pluginRepository>
	</pluginRepositories>
</project>