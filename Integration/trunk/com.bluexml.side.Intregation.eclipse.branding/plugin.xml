<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.bluexml.side.app.Application">
         </run>
      </application>
   </extension>
   <extension
         id="perspective"
         name="S-IDE Perpective"
         point="org.eclipse.ui.perspectives">
      <perspective
            class="com.bluexml.side.app.Perspective"
            icon="icons/perspective_icon.png"
            id="com.bluexml.side.app.perspective"
            name="S-IDE Modeling">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.ui.ide.workbench"
            
            name="S-IDE">
            <!--  application="com.bluexml.side.app.application"  -->
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
          name="appName" 
          value="SIDE"/>
          <property
          name="aboutImage" 
          value="icons/about.gif"/>
          
          <property
          name="aboutText" 
          value="S-IDE by http://www.bluexml.com"/>
          
         
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="com.bluexml.side.app.intro">
      </intro>
      <introProductBinding
            introId="com.bluexml.side.app.intro"
            productId="com.bluexml.side.app.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="com.bluexml.side.app.intro"
            content="introContent.xml"
            id="com.bluexml.side.app.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         id="wizard"
         name="S-IDE project"
         point="org.eclipse.ui.newWizards">
      <wizard
            class="com.bluexml.side.app.NewWizard1"
            finalPerspective="com.bluexml.side.app.perspective"
            id="com.bluexml.side.app.wizard1"
            name="S-IDE"
            project="true">
      </wizard>
   </extension>

</plugin>
