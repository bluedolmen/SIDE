<?xml version="1.0" ?>
<project default="main">

	<path id="compile.classpath">
		<fileset dir="config/lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="main" depends="compile, compress" description="Main target">
		<echo>
            Building the .jar file.
        </echo>
	</target>

	<target name="compile" description="Compilation target">
		<javac srcdir="src" destdir="bin">
			<classpath>
				<pathelement path="${classpath}" />
				<pathelement location="config/lib/jdom.jar" />
				<fileset dir="config/lib">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="compress" description="Compression target" depends="compile">
		<jar jarfile="Build.jar" basedir="bin">
			<manifest>
				<attribute name="Main-Class" value="com.bluexml.side.integration.buildHudson.Application" />
				<attribute name="Class-Path" value="lib/ant-launcher.jar lib/jdom.jar lib/svnant.jar lib/tools.jar lib/ant.jar lib/svnClientAdapter.jar lib/svnjavahl.jar" />
			</manifest>
			<fileset dir="src"/>
		</jar>
	</target>
</project>