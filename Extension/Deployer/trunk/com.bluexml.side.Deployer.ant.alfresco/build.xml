<?xml version="1.0" ?>
<project default="main">
	
	<property file="build.properties"/>

	<target name="main">
		<delete file="${dest.dir}/${zip.name}.zip"/>
		<zip destfile="${dest.dir}/${zip.name}.zip" compress="true">
			<zipfileset dir="dist" prefix="${zip.name}/dist"/>
			<zipfileset dir="src" prefix="${zip.name}/src"/>
			<zipfileset dir="." includes="${readme.file}" prefix="${zip.name}"/>
			<zipfileset dir="." includes="${license.file}" prefix="${zip.name}"/>
		</zip>
	</target>
	
</project>