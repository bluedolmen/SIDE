<plugin>


  <extension
    point = "org.eclipse.ui.newWizards">
    <category
      id = "com.bluexml.side.modeler.category.ID"
      name="%_UI_Wizard_category">
    </category>
    <wizard
      id = "com.bluexml.side.workflow.presentation.WorkflowModelWizardID"
      name = "%_UI_WorkflowModelWizard_label"
      class = "com.bluexml.side.workflow.presentation.WorkflowModelWizard"
      category = "com.bluexml.side.modeler.category.ID"
      icon = "icons/full/obj16/WorkflowModelFile.gif">
      <description>%_UI_WorkflowModelWizard_description</description>
      <selection class = "org.eclipse.core.resources.IResource" />
    </wizard>
  </extension>

  <extension point = "org.eclipse.ui.editors">
    <editor
        id = "com.bluexml.side.workflow.presentation.WorkflowEditorID"
        name = "%_UI_WorkflowEditor_label"
        icon = "icons/full/obj16/WorkflowModelFile.gif"
        extensions = "workflow"
        class = "com.bluexml.side.workflow.presentation.WorkflowEditor" 
        contributorClass="com.bluexml.side.workflow.presentation.WorkflowActionBarContributor" >
    </editor>
  </extension>
  <extension
        point="org.eclipse.ui.popupMenus">
     <objectContribution
           id="com.bluexml.side.Workflow.editor.contribution1"
           nameFilter="*.workflow"
           objectClass="org.eclipse.core.resources.IFile">
        <menu
              id="com.bluexml.side.Workflow.editor.menu1"
              label="S-IDE"
              path="additions">
           <separator
                 name="group1">
           </separator>
        </menu>
        <action
              class="com.bluexml.side.workflow.editor.popup.actions.InitializeFormModel"
              enablesFor="1"
              icon="icons/menu/initializeFormModel.png"
              id="com.bluexml.side.Workflow.editor.newAction"
              label="Initialize form model"
              menubarPath="com.bluexml.side.Workflow.editor.menu1/group1">
        </action>
     </objectContribution>
  </extension>    
</plugin>
