<project name="DocBook generation" default="default">
	
	<taskdef resource="net/sf/antcontrib/antcontrib.properties"/>
	<property name="external-lib_repertory" value="../../../../external-lib"/>
	
    <!-- ================================= 
          target: default              
         ================================= -->
    <target name="default">
        <foreach target="convertFile" param="file">
        	<path>
        		<fileset dir="${generated_dir}" includes="*.xml"/>
        	</path>
    	</foreach>
    </target>
	
	<target name="convertFile">
		<replace file="${file}" token="./docbook-4.5/docbookx.dtd" value="../../../external-lib/docbook-4.5/docbookx.dtd"/>
		<exec executable="xsltproc">
			<arg line="--output '${file}.html' --stringparam fop1.extensions 1  ${external-lib_repertory}/docbook-xsl-1.74.0/html/docbook.xsl '${file}'"/>
		</exec>
		<delete file="${file}"/>
	</target>

</project>