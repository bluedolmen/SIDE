<?xml version='1.0' encoding='ISO-8859-1'?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
				http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
				http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.0.xsd">


	<bean id="associationSynchronisationResolver" class="com.bluexml.side.Integration.alfresco.associationSynchronisation.PropertyFileAssociationSynchronisationResolverImpl" >
		<property name="resourcePattern" value="classpath*:alfresco/module/*/association-synchronisation.properties" />
	</bean>

 	<bean id="associationSynchronisationPolicy" class="com.bluexml.side.Integration.alfresco.associationSynchronisation.AssociationSynchronisationPolicy" init-method="init">
		<property name="policyComponent" ref="policyComponent" />
		<property name="nodeService" ref="nodeService" />
		<property name="nodeDaoService" ref="nodeDaoService" />
		<property name="resolver" ref="associationSynchronisationResolver" />
	</bean>

</beans>